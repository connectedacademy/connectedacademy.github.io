$color-primary =  #29B474
$color-text = white
$header-height = 580px
$body-color = #5d5d5d



fadebackground()
    // background: -moz-radial-gradient(center, ellipse cover, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0) 100%); /* FF3.6-15 */
    // background: -webkit-radial-gradient(center, ellipse cover, rgba(0,0,0,0.5) 0%,rgba(0,0,0,0) 100%); /* Chrome10-25,Safari5.1-6 */
    background: radial-gradient(ellipse at center, rgba(0,0,0,0.4) 0%,rgba(0,0,0,0) 50%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */

.header {
    background: url('/public/images/bitmap.png') $color-primary
    background-repeat: no-repeat
    background-position: bottom center
    min-height: $header-height
    text-align: center
    color: $color-text
    overflow: hidden

    box-shadow: inset 0px -20px 20px -10px rgba(0,0,0,0.4)

    .title {
        color: $color-text
        width: 100%
        font-family: 'Exo', 'Helvetica',sans-serif
        margin-top:1.7em
    }
}

.mainbody {
    text-align: center
    z-index: 1
    background: white
    color: $body-color

    a
    {
        color: $color-primary
        text-decoration: none

        &:hover
        {
            text-decoration: underline
        }
    }

    .headline
    {
        font-size: 1.8em        
        margin-top: 2em
        font-family: 'Exo', 'Helvetica',sans-serif;
        margin-bottom: 2em
    }

    p {
        padding: 0
        margin: 0
    }

    .highlight{
        color: $color-primary
    }

    h2 {
        font-family: 'Exo', 'Helvetica',sans-serif;
        color: #333333
        margin-bottom: 1em
        margin-top: 1em
    }

    hr {
        width:50%
    }

    .footer{
        min-height: 4em
    }

    .course{
        background: #f8f8f8
        padding: 1em
        margin-top: 2em
        margin-bottom: 2em        
        border-radius: 5px
        text-align: left

        h1 {
            font-size: 2em
            margin: 0
        }

        .starting
        {
            color:#2999b4
            margin-top:1.5em
        }

        p {
            // color: #333333
            
        }

        a{
            margin-top: 1.5em
            text-align: right
            display: block
        }
    }
}

input[type="email"]:focus, input[type="number"]:focus, input[type="search"]:focus, input[type="text"]:focus, input[type="tel"]:focus, input[type="url"]:focus, input[type="password"]:focus, textarea:focus, select:focus {
    border: 1px solid $color-primary !important;
    outline: 0;
}